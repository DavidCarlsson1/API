{
    "openapi": "3.0.1",
    "info": {
        "title": "Open communication API created for CSN",
        "description": "To be used by CSN for spreading information to stakeholders through external websites",
        "termsOfService": "https://www.csn.se/",
        "contact": {
            "name": "David Carlsson & Mikolaj Wagner",
            "url": "",
            "email": "david.carlsson@csn.se & mikolaj.wagner@csn.se"
        },
        "license": {
            "name": "Apache License",
            "url": "https://apache.org/licenses/LICENSE-2.0"
        },
        "version": "v1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8081",
            "description": "Generated server url"
        }
    ],
    "paths": {
        "/public/messages": {
            "get": {
                "tags": [
                    "message-controller"
                ],
                "operationId": "getAllMessages",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Message"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/public/messages/{id2}": {
            "get": {
                "tags": [
                    "message-controller"
                ],
                "operationId": "getOneMessage",
                "parameters": [
                    {
                        "name": "id2",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "$ref": "#/components/schemas/Message"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Message": {
                "type": "object",
                "properties": {
                    "id2": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "headline": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "hyperlink": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "startDate": {
                        "type": "string"
                    },
                    "endDate": {
                        "type": "string"
                    },
                    "publishingDate": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}